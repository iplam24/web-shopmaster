@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                DANH SÁCH CHUYÊN MỤC
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm mới danh mục
            </a>
        </div>
    </div>
</div>

<table class=" table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                TÊN DANH MỤC
            </th>
            <th>
                THỨ TỰ HIỂN THỊ 
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>

                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>  Chỉnh sửa
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>Xóa

                        </a>
                        
                    </div>
                </td>

            </tr>
        }
    </tbody>

</table>
