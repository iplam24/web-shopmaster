@model Category

<form method="post">
    @*<input asp-for="Id" />*@

    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary"> Chỉnh sửa thư mục</h2>
            <hr />

        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-3">
            <label asp-for="Name" class="p-2"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-2"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

            <div class="row p-4">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Cập nhật</button>

                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary  form-control">Quay trở về danh sách</a>
                </div>

            </div>

        </div>


    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}