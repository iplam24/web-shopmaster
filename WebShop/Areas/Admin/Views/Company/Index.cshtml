
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Danh sách Công Ty
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Tạo Công ty mới
            </a>
        </div>
    </div>
</div>

<table id="tblData" class=" table table-bordered table-striped">
 <thead>
         <tr>
            <form asp-controller="Company" asp-action="Index">
                <p>
                    Title: <input type="text" name="SearchString" />
                    <input type="submit" value="Tìm kiếm" />
                </p>
            </form>
         </tr>
         
        <tr >
            <th>Tên Công ty</th>
            <th>Địa Chỉ </th>
            <th> City</th>
            <th>State</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.StreetAddress</td>
                <td>@obj.City</td>
                <td>@obj.State</td>
                <td>@obj.PhoneNumber</td>

                <td>
                    <div class=" btn-group" role="group">
                        <a asp-controller="Company" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>  Edit
                        </a>
                        <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>Delete

                        </a>

                    </div>
                </td>

            </tr>
        }
    </tbody>

</table>
