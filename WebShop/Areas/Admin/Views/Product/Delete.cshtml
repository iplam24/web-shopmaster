@model Product

<form method="post">
    @*<input asp-for="Id" />*@
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary"> Xóa Sản Phẩm</h2>
            <hr />

        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-3">
            <label asp-for="Title" class="p-2"></label>
            <input asp-for="Title" type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-2"></label>
            <input asp-for="Description" type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Size" class="p-2"></label>
            <input asp-for="Size" type="text" class="form-control" />
        </div>

       
       
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-2"></label>
            <input asp-for="Price" type="text" class="form-control" />
        </div>
       
       
        <div class="mb-3 row p-1">
            <div class="row p-4">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Xóa</button>

                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary  form-control">Quay trở về</a>
                </div>

            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}