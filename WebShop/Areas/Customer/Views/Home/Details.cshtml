@model ShoppingCart


<form method="post">
    <input hidden asp-for="ProductId" /> 
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-black text-uppercase">@Model.Product.Title</h3>
                    <p class="text-black-50 fw-semibold mb-0">được làm bởi :  Tiệm Bánh Handmade Cao Cấp</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index"  class=" bg-gradient  fw-semibold btn-sl text-uppercase">
                            <small>Trang chủ</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3" style="margin: 186px 58px";>

                        @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Count > 0)
                        {
                            <div id="carouselExampleIndicators" style="width: 453px;" class="carousel  slide" data-bs-ride="carousel">
                                <div class="carousel-indicators" >

                                    @foreach (var imageWithIndex in
                                   Model.Product.ProductImages
                                   .Select((image, index) => new { Image = image, Index = index }))
                                    {
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@imageWithIndex.Index"
                                                class="@(imageWithIndex.Index==0?"active":"")" aria-current="true" aria-label="Slide 1"></button>
                                    }


                                </div>
                                <div class="carousel-inner" style="height:500px;">
                                    @foreach (var imageWithIndex in
                                   Model.Product.ProductImages
                                   .Select((image, index) => new { Image = image, Index = index }))
                                    {
                                        <div class="@(imageWithIndex.Index==0?"carousel-item active":"carousel-item")">
                                            <img src="@imageWithIndex.Image.ImageUrl" class="d-block w-100" alt="...">
                                        </div>
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>

                        }










                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span style="font-size:15px"class="badge text-black">Thể loại: @Model.Product.Category.Name</span>
                        </div>
                        
                        <div class="row pl-2 my-3">
                            <h3> Size: @Model.Product.Size</h3>
                            
                        </div>
                        <div class="row text-center ps-2">
                           
                        </div>
                        <div class=" text-center ps-2">
                            <div class="p-1  bg-white text-danger fw-bold">
                                <div>Giá Bán :</div>
                            </div>
                            <div class="p-1   bg-white text-danger fw-bold">
                                <div style="font-size:35px">@Model.Product.Price.ToString("c"+"0")</div>
                            </div>
                          
                        </div>
                        <div class="row pl-2 my-3">
                            <h3> Mô tả:</h3>
                            <p class="text-secondary lh-sm">@Html.Raw(@Model.Product.Description)</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-5">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Số Lượng
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end "
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" 
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Thêm vào giỏ hàng 
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
