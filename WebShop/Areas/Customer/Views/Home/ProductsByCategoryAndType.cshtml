@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class=" col-lg-3 col-sm-6">

            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 shadow border-top border-5 rounded" style="height:450px;">
                        @* <img width="300" height="300" src="@product.ImggeUrl" style="height:250px;" class=" card col-md-auto " alt="Responsive image" /> *@
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p style="height:50px;" class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>

                            </div>
                            <div class="pl-1">

                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    Size bánh:
                                    <span class="text-decoration-black font-weight-bold">
                                        @product.Size
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-danger text-opacity-75 text-center" style="font-size: 20.5px;">
                                    Giá đang được bán:
                                    <span>
                                        @product.Price.ToString("c"+"0")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details"
                           asp-route-productId="@product.Id"
                           class="btn btn-primary bg-gradient border-0 form-control">
                            Chi Tiết
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
