                                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Quản lý Sản Phẩm</a>
                                        <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="dropdown-item">Danh mục</a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="dropdown-item">Sản phẩm</a>
                                            <a asp-area="Customer" asp-controller="News" asp-action="Index" class="dropdown-item">Đơn Đăng Ký Tư Vấn</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        <div class="d-flex m-3 me-0">
                            
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="position-relative me-4 my-auto">
                                <i class="fa fa-shopping-bag fa-2x"></i>
        <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">@await Component.InvokeAsync("ShoppingCart")</span>
